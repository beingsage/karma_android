<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/indigo_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/metric_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_brainn"
                app:tint="@color/indigo_500" />

            <FrameLayout
                android:id="@+id/trend_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <ImageView
                    android:id="@+id/trend_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_trend_up"
                    app:tint="@color/trend_positive" />

                <TextView
                    android:id="@+id/trend_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="14dp"
                    android:text="1.5"
                    android:textColor="@color/trend_positive"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/metric_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/metric_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depth Ratio"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/metric_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtask/total"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:alpha="0.7" />
    </LinearLayout>
</androidx.cardview.widget.CardView>