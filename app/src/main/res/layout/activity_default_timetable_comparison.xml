<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Notification -->
    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current default timetable loaded."
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="16sp" />

    <!-- Fetch New Button -->
    <Button
        android:id="@+id/btnFetchNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Fetch New Default TT" />

    <!-- Side-by-Side Comparison -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Current TT -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvCurrentTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Tasks"
                android:textSize="14sp"
                android:padding="8dp" />
        </ScrollView>

        <!-- New TT -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvNewTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Tasks"
                android:textSize="14sp"
                android:padding="8dp" />
        </ScrollView>
    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Confirm New TT" />
</LinearLayout>