<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvPermissionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking permissions..."
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnRequestPermissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grant Permissions"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Text-to-Speech" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Notifications" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchVibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Vibration" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTaskLogger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Task Logger" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchWidgets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Widgets" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchVoiceCommands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Voice Commands" />

        <Button
            android:id="@+id/btnProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed to App"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>