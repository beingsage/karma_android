<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay" />
        </shape>
    </item>
    
    <!-- Scanning window -->
    <item
        android:left="60dp"
        android:right="60dp"
        android:top="200dp"
        android:bottom="300dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Scanning line animation -->
    <item
        android:left="60dp"
        android:right="60dp"
        android:top="250dp"
        android:bottom="252dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_nutrition" />
        </shape>
    </item>
    
    <!-- Corner markers -->
    <item
        android:left="60dp"
        android:top="200dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size
                android:width="15dp"
                android:height="3dp" />
        </shape>
    </item>
    
    <item
        android:left="60dp"
        android:top="200dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <size
                android:width="3dp"
                android:height="15dp" />
        </shape>
    </item>
    
</layer-list>
