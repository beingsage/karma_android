<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rest_timer_margin"
    android:background="@drawable/rest_timer_background"
    android:elevation="@dimen/elevation_high"
    android:orientation="horizontal"
    android:padding="@dimen/padding_md">

    <ImageView
        android:layout_width="@dimen/icon_size_lg"
        android:layout_height="@dimen/icon_size_lg"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_timer"
        android:tint="@color/primary" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_md"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rest_timer_title"
            android:textAppearance="@style/TextAppearance.Body2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xs"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/restTimerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:00"
                android:textAppearance="@style/TextAppearance.Headline3"
                android:fontFamily="monospace" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/restProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_md"
                style="@style/ProgressBar.Horizontal" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/skipRestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/skip_rest"
        style="@style/Button.Secondary"
        android:icon="@drawable/ic_skip_forward" />

</LinearLayout>
