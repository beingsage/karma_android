    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="com.technource.android.TaskApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/karma"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskManager"
        tools:targetApi="31"
        android:largeHeap="true">
        <meta-data
            android:name="android.app.shortcuts"
            android:resource="@xml/shortcuts"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.technource.android.module.homeModule.HomeScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.technource.android.eTMS.micro.TaskLoggerActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <activity android:name="com.technource.android.utils.PermissionActivity" />
        <activity android:name="com.technource.android.module.miscModule.MiscellaneousScreen"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.technource.android.module.settingsModule.SettingsScreen"
            android:theme="@style/AppTheme" />
        <activity android:name="com.technource.android.module.statsModule.StatsScreen"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.technource.android.system_status.SystemStatusActivity" />
        <activity android:name="com.technource.android.module.settingsModule.DefaultTimetableComparisonActivity" />
        <activity android:name="com.technource.android.module.miscModule.miscscreen.Gym.GymActivity"
            android:theme="@style/Theme.GymTracker"/>
        <activity android:name="com.technource.android.module.miscModule.miscscreen.Finance.FinanceActivity"
            android:theme="@style/Theme.FinPilot"/>



        <service android:name="com.technource.android.utils.FloatingService"
            android:exported="false"
            android:foregroundServiceType="microphone|camera" />

        <service android:name="com.technource.android.system_status.SystemStatusService"
            android:foregroundServiceType="systemExempted"/>

        <receiver android:name="com.technource.android.system_status.BootReceiver"
                  android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.technource.android.eTMS.micro.TaskWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.technource.android.ETMS.PREVIOUS" />
                <action android:name="com.technource.android.ETMS.NEXT" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <receiver android:name="com.technource.android.system_status.BatteryReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_LOW"/>
            </intent-filter>
        </receiver>

        <receiver android:name="com.technource.android.system_status.NetworkReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>




        <!-- Register BroadcastReceiver -->
        <receiver android:name=".eTMS.micro.DynamicWallpaperTaskIterator"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.dynamictaskwallpaper.APPLY_WALLPAPER" />
            </intent-filter>
        </receiver>

        <service
    android:name=".eTMS.macro.EternalTimeTableUnitService" android:permission="android.permission.BIND_JOB_SERVICE"
    android:enabled="true"
    android:exported="false"
    android:foregroundServiceType="dataSync" />

       <receiver
    android:name=".eTMS.macro.AutoStartReceiver"
    android:enabled="true"
    android:exported="true" android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
    <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
        <action android:name="android.intent.action.USER_PRESENT" />
        <action android:name="android.intent.action.POWER_CONNECTED" />
    </intent-filter>
       </receiver>

        <!-- Add HeartbeatReceiver -->
        <receiver
            android:name="com.technource.android.eTMS.macro.HeartbeatReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.technource.android.HEARTBEAT_CHECK" />
            </intent-filter>
        </receiver>

        <!-- Add WatchdogService -->
        <service
            android:name="com.technource.android.eTMS.macro.WatchdogService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="systemExempted"/>

        <!-- Existing RestartServiceJob service (ensure it exists) -->
        <service
            android:name="com.technource.android.eTMS.macro.RestartServiceJob"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="false" />


            <activity android:name=".eTMS.DashboardActivity"/>

